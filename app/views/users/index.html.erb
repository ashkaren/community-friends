
<div class="row">
  <div class="col-lg-10 col-lg-offset-1 well">
    <% if signed_in? && current_user.admin? %>
      <h3>Registered Users</h3>
        <table class="bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user, 'data-no-turbolink' => true %></td>
              <td><%= link_to 'Edit', edit_user_path(user) %></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </table>
      <br>
      <%= link_to 'Back', user_path(current_user) %>

    <%elsif signed_in? && current_user.lead? %>
      <h3>Registered Users Pending Approval</h3>
        <table class="bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Address</th>
              <th>Approved</th>
              <th>Authorize</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.address %></td>
              <td><%= user.approved %></td>
              <td><%= link_to 'Approve', approve_user_path(user.id), class: 'btn btn-primary' %></td>
            </tr>
          <% end %>
        </table>
      <br>
      <%= link_to 'Back', user_path(current_user) %>
    <% end %>
  </div>
</div> 