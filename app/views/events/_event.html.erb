<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<div class="info">
  <h4 class="name"><%= event.user.name %></h4>
  <span class="action">created an <%= link_to 'event', event %></span>
</div>
<div class="content">
  <h3><%= event.name %></h3>
  <span class="text">
    <%= fa_icon'calendar' %> <%= formatted_time(event.when) %>
  </span>
  <%= render 'appwide/created_at', activity: event %>
  <div class="points">
    <span class="like-count"><%= pluralize(event.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(event.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(event) %>
        <%= form_tag event_path(event), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'appwide/actions', resource: event %>