<div class="row">
  <div class="col-lg-10 col-lg-offset-1 well">

<h1>Available Groups</h1>

<table class="bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Members</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= group.users.map{|user| user.name}.join(',') %>
</td>
        <td><%= link_to 'Show', group %></td>
        <% if group.users.include? current_user %>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= ""%></td>
        <% end %>
        <% if group.users.include? current_user %>
          <td><%= link_to 'Leave', leave_path(group), method: :post, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to "Join", join_group_path(group)%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path, class: 'btn btn-primary' %>

</div>
</div>