<p id="notice"><%= notice %></p>

<h1>Events </h1>

<table class="bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
    </tr>
  </thead>



  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>

        <td><%= meeting.start_time %></td>
        <td><%= image_tag(meeting.image_url, class: 'list_image') %></td>
        <td><%= meeting.description %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= month_calendar events: @meetings do |date, meetings| %>
  <%= date.day %>

  <% meetings.each do |meeting| %>
    <div>
      <%= meeting.name %>
    </div>
  <% end %>
<% end %>


<%= link_to 'New Event', new_meeting_path %>
